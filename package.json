{
  "name": "inventive_barrio_subtheme",
  "version": "1.0.0",
  "description": "Inventive Bootstrap 5 subtheme implementation for Barrio 5.5+",
  "main": "index.js",
  "scripts": {
    "bs": "browser-sync start --config src/build/browser-sync.config.js",
    "watch-css": "sass --watch src/scss/style.scss css/style.css",
    "copy-assets": "node src/build/copy-assets.js",
    "start": "npm-run-all --parallel watch-css copy-assets bs"
  },
  "keywords": [
    "drupal",
    "theme",
    "bootstrap",
    "barrio",
    "inventive"
  ],
  "author": "Dan Thorne (https://www.inventivedesign.co.uk)",
  "license": "ISC",
  "devDependencies": {
    "bootstrap": "^5.1.3",
    "browser-sync": "^2.27.5",
    "npm-run-all": "^4.1.5",
    "sass": "^1.43.2"
  }
}
